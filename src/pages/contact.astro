---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ORG_CONTACT, getEnabledSocials } from "../config/site";
import { Mail, Instagram, MapPin } from "lucide-astro";

const socials = getEnabledSocials();
---

<BaseLayout
  title="Contact - CraftNW"
  description="Get in touch with CraftNW for custom orders, questions, or collaboration inquiries."
>
  <Header />
  
  <!-- Add padding for fixed header -->
  <div class="pt-32 md:pt-36"></div>

  <!-- Page Header -->
  <section class="bg-craft-tan py-16">
    <div class="container-craft text-center">
      <h1 class="text-craft-black mb-4">
        Get in Touch
      </h1>
      <p class="text-craft-charcoal text-xl max-w-2xl mx-auto">
        Have a question or interested in a custom piece? I'd love to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section-padding bg-craft-cream">
    <div class="container-craft">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Form -->
        <div>
          <h2 class="text-craft-black mb-6">
            Send a Message
          </h2>
          <form class="space-y-6" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
            <div>
              <label for="name" class="block text-craft-black font-medium mb-2">
                Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-craft-warm-gray focus:border-craft-black focus:outline-none text-craft-black bg-craft-white"
              />
            </div>

            <div>
              <label for="email" class="block text-craft-black font-medium mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-craft-warm-gray focus:border-craft-black focus:outline-none text-craft-black bg-craft-white"
              />
            </div>

            <div>
              <label for="subject" class="block text-craft-black font-medium mb-2">
                Subject
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-craft-warm-gray focus:border-craft-black focus:outline-none text-craft-black bg-craft-white"
              />
            </div>

            <div>
              <label for="message" class="block text-craft-black font-medium mb-2">
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-craft-warm-gray focus:border-craft-black focus:outline-none text-craft-black bg-craft-white resize-none"
              ></textarea>
            </div>

            <button type="submit" class="btn-primary w-full">
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div>
          <h2 class="text-craft-black mb-6">
            Contact Information
          </h2>
          
          <div class="space-y-8">
            <!-- Email -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-craft-red rounded-full flex items-center justify-center flex-shrink-0">
                <Mail class="w-6 h-6 text-craft-white" />
              </div>
              <div>
                <h3 class="text-craft-black font-medium mb-2">Email</h3>
                <a
                  href={`mailto:${ORG_CONTACT.email}`}
                  class="text-craft-brown hover:text-craft-red transition-colors"
                >
                  {ORG_CONTACT.email}
                </a>
              </div>
            </div>

            <!-- Instagram -->
            {socials.map((social) => {
              if (social.key === "instagram") {
                return (
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-craft-red rounded-full flex items-center justify-center flex-shrink-0">
                      <Instagram class="w-6 h-6 text-craft-white" />
                    </div>
                    <div>
                      <h3 class="text-craft-black font-medium mb-2">Instagram</h3>
                      <a
                        href={social.href}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-craft-brown hover:text-craft-red transition-colors"
                      >
                        @craft_nw
                      </a>
                    </div>
                  </div>
                );
              }
              return null;
            })}

            <!-- Location -->
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-craft-red rounded-full flex items-center justify-center flex-shrink-0">
                <MapPin class="w-6 h-6 text-craft-white" />
              </div>
              <div>
                <h3 class="text-craft-black font-medium mb-2">Location</h3>
                <p class="text-craft-charcoal">
                  {ORG_CONTACT.location}
                </p>
              </div>
            </div>

            <!-- Response Time -->
            <div class="bg-craft-white p-6 rounded-lg border-2 border-craft-warm-gray">
              <h3 class="text-craft-black font-medium mb-2">Response Time</h3>
              <p class="text-craft-charcoal">
                I typically respond to inquiries within 1-2 business days. For custom orders, I'll get back to you with a quote and timeline.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-padding bg-craft-white">
    <div class="container-craft max-w-4xl">
      <div class="text-center mb-16">
        <h2 class="text-craft-black mb-4">
          Frequently Asked Questions
        </h2>
      </div>

      <div class="space-y-8">
        <div>
          <h3 class="text-craft-black mb-3">Do you take custom orders?</h3>
          <p class="text-craft-charcoal text-lg">
            Yes! I love working on custom projects. Reach out with your ideas and we can discuss materials, dimensions, and timeline.
          </p>
        </div>

        <div>
          <h3 class="text-craft-black mb-3">What's your typical turnaround time?</h3>
          <p class="text-craft-charcoal text-lg">
            For items in stock, I ship within 2-3 business days. Custom orders typically take 2-4 weeks depending on complexity.
          </p>
        </div>

        <div>
          <h3 class="text-craft-black mb-3">Do you ship internationally?</h3>
          <p class="text-craft-charcoal text-lg">
            Currently, I ship within the United States. For international orders, please contact me and we can discuss options.
          </p>
        </div>

        <div>
          <h3 class="text-craft-black mb-3">What if I'm not satisfied with my purchase?</h3>
          <p class="text-craft-charcoal text-lg">
            Customer satisfaction is important to me. If you're not happy with your purchase, contact me within 14 days and we'll work it out.
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

