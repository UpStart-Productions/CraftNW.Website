---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ORG_CONTACT, ORG_SOCIALS, getEnabledSocials } from "../config/site";
import { Mail, Instagram, MapPin, ShoppingBag } from "lucide-astro";

const socials = getEnabledSocials();
---

<BaseLayout
  title="Contact - CraftNW"
  description="Get in touch with CraftNW for custom orders, questions, or collaboration inquiries."
>
  <Header />
  
  <!-- Add padding for fixed header -->
  <div class="pt-32 md:pt-36"></div>

  <!-- Page Header -->
  <section class="bg-craft-tan py-16">
    <div class="container-craft text-center">
      <h1 class="text-craft-black mb-4">
        Get in Touch
      </h1>
      <p class="text-craft-charcoal text-xl max-w-2xl mx-auto">
        Have a question or interested in a custom piece? I'd love to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-8 md:py-16 bg-craft-cream">
    <div class="max-w-7xl mx-auto px-3 md:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Form -->
        <div>
          <h2 class="text-craft-black mb-6">
            Send a Message
          </h2>
          <form class="space-y-6" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
            <div>
              <label for="name" class="block text-craft-black font-medium mb-2">
                Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-craft-warm-gray focus:border-craft-black focus:outline-none text-craft-black bg-craft-white"
              />
            </div>

            <div>
              <label for="email" class="block text-craft-black font-medium mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-craft-warm-gray focus:border-craft-black focus:outline-none text-craft-black bg-craft-white"
              />
            </div>

            <div>
              <label for="subject" class="block text-craft-black font-medium mb-2">
                Subject
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-craft-warm-gray focus:border-craft-black focus:outline-none text-craft-black bg-craft-white"
              />
            </div>

            <div>
              <label for="message" class="block text-craft-black font-medium mb-2">
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-craft-warm-gray focus:border-craft-black focus:outline-none text-craft-black bg-craft-white resize-none"
              ></textarea>
            </div>

            <button type="submit" class="btn-primary w-full">
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div>
          <h2 class="text-craft-black mb-6">
            Contact Information
          </h2>
          
          <div class="space-y-6">
            <!-- Email -->
            <div class="flex items-center gap-4">
              <Mail class="w-6 h-6 text-craft-charcoal flex-shrink-0" />
              <a
                href={`mailto:${ORG_CONTACT.email}`}
                class="text-craft-red hover:opacity-80 transition-colors text-lg"
              >
                {ORG_CONTACT.email}
              </a>
            </div>

            <!-- Etsy -->
            <div class="flex items-center gap-4">
              <ShoppingBag class="w-6 h-6 text-craft-charcoal flex-shrink-0" />
              <a
                href={ORG_SOCIALS.etsy}
                target="_blank"
                rel="noopener noreferrer"
                class="text-craft-red hover:opacity-80 transition-colors text-lg"
              >
                Etsy Shop
              </a>
            </div>

            <!-- Social Media -->
            {socials.map((social) => {
              if (social.key === "instagram") {
                return (
                  <div class="flex items-center gap-4">
                    <Instagram class="w-6 h-6 text-craft-charcoal flex-shrink-0" />
                    <a
                      href={social.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-craft-red hover:opacity-80 transition-colors text-lg"
                    >
                      @craft_nw
                    </a>
                  </div>
                );
              }
              if (social.key === "pinterest") {
                return (
                  <div class="flex items-center gap-4">
                    <svg class="w-6 h-6 text-craft-charcoal flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
                    </svg>
                    <a
                      href={social.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-craft-red hover:opacity-80 transition-colors text-lg"
                    >
                      Pinterest
                    </a>
                  </div>
                );
              }
              if (social.key === "behance") {
                return (
                  <div class="flex items-center gap-4">
                    <svg class="w-6 h-6 text-craft-charcoal flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M22 7h-7v-2h7v2zm1.726 10c-.442 1.297-2.029 3-5.101 3-3.074 0-5.564-1.729-5.564-5.675 0-3.91 2.325-5.92 5.466-5.92 3.082 0 4.964 1.782 5.375 4.426.078.506.109 1.188.095 2.14h-8.027c.13 3.211 3.483 3.312 4.588 2.029h3.168zm-7.686-4h4.965c-.105-1.547-1.136-2.219-2.477-2.219-1.466 0-2.277.768-2.488 2.219zm-9.574 6.988h-6.466v-14.967h6.953c5.476.081 5.58 5.444 2.72 6.906 3.461 1.26 3.577 8.061-3.207 8.061zm-3.466-8.988h3.584c2.508 0 2.906-3-.312-3h-3.272v3zm3.391 3h-3.391v3.016h3.341c3.055 0 2.868-3.016.05-3.016z"/>
                    </svg>
                    <a
                      href={social.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-craft-red hover:opacity-80 transition-colors text-lg"
                    >
                      chiefupstart
                    </a>
                  </div>
                );
              }
              return null;
            })}

            <!-- Location -->
            <div class="flex items-center gap-4">
              <MapPin class="w-6 h-6 text-craft-charcoal flex-shrink-0" />
              <a
                href="https://tastenewberg.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="text-craft-red hover:opacity-80 transition-colors text-lg"
              >
                {ORG_CONTACT.location}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

