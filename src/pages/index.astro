---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ImageCarousel, { type CarouselSlide } from "../components/ImageCarousel.astro";
import SectionHeader from "../components/SectionHeader.astro";
import ProductCard from "../components/ProductCard.astro";
import { getFeaturedProducts } from "../data/products";
import { ArrowRight } from "lucide-astro";

const featuredProducts = getFeaturedProducts();

// Carousel slides from the lamps collection
const heroSlides: CarouselSlide[] = [
  {
    image: "/images/hero/lamps/Lamp 1 Pic 3.jpg",
    title: "Handcrafted for Your Home",
    subtitle: "Quality Woodworking",
    description: "Custom lamps, furniture, and home goods made with care in Newberg, Oregon",
    textColor: "white",
  },
  {
    image: "/images/hero/lamps/Lamp 2 Pic 1.jpg",
    title: "Unique Lighting",
    subtitle: "One-of-a-Kind Designs",
    description: "Each piece is carefully crafted to bring warmth and character to your space",
    textColor: "white",
  },
  {
    image: "/images/hero/stumps/stump-2.JPG",
    title: "Made in Oregon",
    subtitle: "Pacific Northwest Craftsmanship",
    description: "Supporting local artisans and sustainable practices",
    textColor: "white",
  },
  {
    image: "/images/hero/lamps/Lamp 2 Pic 7.jpg",
    title: "Made in Oregon",
    subtitle: "Pacific Northwest Craftsmanship",
    description: "Supporting local artisans and sustainable practices",
    textColor: "white",
  },
  {
    image: "/images/hero/lamps/Lamp 2 Pic 10.jpg",
    title: "Made in Oregon",
    subtitle: "Pacific Northwest Craftsmanship",
    description: "Supporting local artisans and sustainable practices",
    textColor: "white",
  },
  {
    image: "/images/hero/stumps/stump-1.JPG",
    title: "Made in Oregon",
    subtitle: "Pacific Northwest Craftsmanship",
    description: "Supporting local artisans and sustainable practices",
    textColor: "white",
  },
];
---

<BaseLayout>
  <Header />

  <!-- Hero Carousel Section -->
  <ImageCarousel
    slides={heroSlides}
    height="large"
    zoomDuration={8}
    displayDuration={6}
    fadeTransition={2}
  />

  <!-- Featured Products Section -->
  <section class="section-padding bg-craft-cream">
    <div class="container-craft">
      <SectionHeader
        title="Featured Products"
        subtitle="Handpicked items crafted with attention to detail"
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        {featuredProducts.map((product) => (
          <ProductCard
            name={product.name}
            price={product.price}
            image={product.image}
            category={product.category}
            link={product.etsyLink}
            featured={product.featured}
          />
        ))}
      </div>

      <div class="text-center">
        <a href="/shop" class="btn-primary inline-flex items-center gap-2">
          <span>View All Products</span>
          <ArrowRight class="w-5 h-5" />
        </a>
      </div>
    </div>
  </section>

  <!-- About Preview Section -->
  <section class="section-padding bg-craft-white">
    <div class="container-craft">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Image -->
        <div class="order-2 lg:order-1">
          <img
            src="https://images.unsplash.com/photo-1416339442236-8ceb164046f8?w=800&q=80"
            alt="Woodworking workshop tools"
            class="rounded-lg shadow-lg w-full"
          />
        </div>

        <!-- Content -->
        <div class="order-1 lg:order-2">
          <h2 class="text-craft-black mb-6">
            Crafted with Care in the Pacific Northwest
          </h2>
          <p class="text-craft-charcoal text-lg mb-6">
            Every piece is handmade in my workshop in Newberg, Oregon. From woodworking projects to productivity tools, I create items that blend function with thoughtful design.
          </p>
          <p class="text-craft-charcoal text-lg mb-8">
            What started as a hobby has grown into a passion for creating beautiful, useful things that bring joy to everyday life.
          </p>
          <a href="/about" class="btn-secondary inline-flex items-center gap-2">
            <span>Learn More About CraftNW</span>
            <ArrowRight class="w-5 h-5" />
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="section-padding bg-craft-tan">
    <div class="container-craft">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-craft-black mb-4">
          Stay Updated
        </h2>
        <p class="text-craft-charcoal text-lg mb-8">
          Get notified when new products are available and receive occasional updates from the workshop.
        </p>
        
        <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
          <input
            type="email"
            placeholder="Your email address"
            class="flex-1 px-6 py-4 rounded-lg border-2 border-craft-brown focus:border-craft-black focus:outline-none text-craft-black"
            required
          />
          <button type="submit" class="btn-primary whitespace-nowrap">
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

