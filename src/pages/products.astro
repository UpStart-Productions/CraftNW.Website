---

<BaseLayout
  title="Products - CraftNW"
  description="Browse our collection of handcrafted woodworking, games, and printables made with care in Newberg, Oregon."
>
  <Header />
  
  <!-- Add padding for fixed header -->
  <div class="pt-32 md:pt-36"></div>

  <!-- Page Header -->
  <section class="bg-craft-tan py-16">
    <div class="container-craft text-center">
      <h1 class="text-craft-black mb-4">
        Our Products
      </h1>
      <p class="text-craft-charcoal text-xl max-w-2xl mx-auto">
        Each piece is handcrafted with care in Newberg, Oregon. Explore our collection of woodworking, games, and printables.
      </p>
    </div>
  </section>

  <!-- Products Section -->
  <section class="section-padding bg-craft-cream">
    <div class="container-craft">
      <div class="space-y-16">
        {products.map((product, index) => (
          <article class="bg-craft-white rounded-lg shadow-lg overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
              <!-- Image Carousel -->
              <div class={`${index % 2 === 0 ? 'lg:order-1' : 'lg:order-2'}`}>
                <ProductImageCarousel images={product.images} />
              </div>

              <!-- Product Info -->
              <div class={`p-8 md:p-12 flex flex-col justify-center ${index % 2 === 0 ? 'lg:order-2' : 'lg:order-1'}`}>
                {product.logo && (
                  <img
                    src={product.logo}
                    alt={`${product.name} Logo`}
                    class="w-full max-w-[200px] mb-6"
                  />
                )}
                
                <div class="inline-block mb-4">
                  <span class="text-xs font-medium uppercase tracking-wider text-craft-red bg-craft-tan px-3 py-1 rounded-full">
                    {product.category}
                  </span>
                </div>
                
                <h2 class="text-3xl md:text-4xl font-medium text-craft-black mb-4">
                  {product.name}
                </h2>
                
                <p class="text-craft-charcoal text-lg mb-8 leading-relaxed">
                  {product.description}
                </p>

                <div>
                  <a 
                    href={product.link} 
                    class="btn-primary inline-flex items-center gap-2"
                  >
                    <span>Learn More</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-craft-white">
    <div class="container-craft text-center">
      <h2 class="text-craft-black mb-6">
        Custom Orders Welcome
      </h2>
      <p class="text-craft-charcoal text-lg mb-8 max-w-2xl mx-auto">
        Have a specific project in mind? I'd love to work with you on a custom piece. Get in touch to discuss your ideas.
      </p>
      <a href="/contact" class="btn-primary inline-flex items-center gap-2">
        <span>Contact Me</span>
      </a>
    </div>
  </section>

  <Footer />
</BaseLayout>

