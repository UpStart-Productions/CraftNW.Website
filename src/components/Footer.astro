---
import { Instagram, Mail, MapPin, ShoppingBag } from "lucide-astro";
import { ORG_CONTACT, ORG_SOCIALS, getEnabledSocials } from "../config/site";

const currentYear = new Date().getFullYear();
const socials = getEnabledSocials();
---

<footer class="bg-craft-black text-craft-white pt-12 pb-8">
  <div class="container-craft">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-8 items-start">
      <!-- Logo & Tagline -->
      <div class="flex items-center gap-3">
        <img
          src="/images/branding/logo-small.png"
          alt="CraftNW"
          class="h-16 w-auto flex-shrink-0"
        />
        <p class="text-gray-300 text-base max-w-xs">
          Handcrafted goods from Newberg, Oregon. Made with care, built to last.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-medium mb-4 text-craft-white">Quick Links</h3>
        <ul class="space-y-3">
          <li>
            <a href="/" class="text-gray-300 hover:text-craft-red transition-colors">
              Home
            </a>
          </li>
          <li>
            <a href="/products" class="text-gray-300 hover:text-craft-red transition-colors">
              Products
            </a>
          </li>
          <li>
            <a href="/about" class="text-gray-300 hover:text-craft-red transition-colors">
              About
            </a>
          </li>
          <li>
            <a href="/contact" class="text-gray-300 hover:text-craft-red transition-colors">
              Contact
            </a>
          </li>
          <li>
            <a href="/products/games/tipsy-trails" class="text-gray-300 hover:text-craft-red transition-colors">
              Tipsy Trails
            </a>
          </li>
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h3 class="text-lg font-medium mb-4 text-craft-white">Connect</h3>
        <div class="space-y-3">
          <a
            href={`mailto:${ORG_CONTACT.email}`}
            class="flex items-center gap-2 text-gray-300 hover:text-craft-red transition-colors"
          >
            <Mail class="w-5 h-5" />
            <span>{ORG_CONTACT.email}</span>
          </a>

          <a
            href={ORG_SOCIALS.etsy}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-gray-300 hover:text-craft-red transition-colors"
          >
            <ShoppingBag class="w-5 h-5" />
            <span>Etsy Shop</span>
          </a>
          
          {socials.map((social) => {
            if (social.key === "instagram") {
              return (
                <a
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-gray-300 hover:text-craft-red transition-colors"
                >
                  <Instagram class="w-5 h-5" />
                  <span>@craft_nw</span>
                </a>
              );
            }
            if (social.key === "pinterest") {
              return (
                <a
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-gray-300 hover:text-craft-red transition-colors"
                >
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
                  </svg>
                  <span>Pinterest</span>
                </a>
              );
            }
            if (social.key === "behance") {
              return (
                <a
                  href={social.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-gray-300 hover:text-craft-red transition-colors"
                >
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M22 7h-7v-2h7v2zm1.726 10c-.442 1.297-2.029 3-5.101 3-3.074 0-5.564-1.729-5.564-5.675 0-3.91 2.325-5.92 5.466-5.92 3.082 0 4.964 1.782 5.375 4.426.078.506.109 1.188.095 2.14h-8.027c.13 3.211 3.483 3.312 4.588 2.029h3.168zm-7.686-4h4.965c-.105-1.547-1.136-2.219-2.477-2.219-1.466 0-2.277.768-2.488 2.219zm-9.574 6.988h-6.466v-14.967h6.953c5.476.081 5.58 5.444 2.72 6.906 3.461 1.26 3.577 8.061-3.207 8.061zm-3.466-8.988h3.584c2.508 0 2.906-3-.312-3h-3.272v3zm3.391 3h-3.391v3.016h3.341c3.055 0 2.868-3.016.05-3.016z"/>
                  </svg>
                  <span>Behance</span>
                </a>
              );
            }
            return null;
          })}

          <a
            href="https://tastenewberg.com/"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-gray-300 hover:text-craft-red transition-colors"
          >
            <MapPin class="w-5 h-5" />
            <span>{ORG_CONTACT.location}</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-400 text-sm">
        Â© {currentYear} CraftNW. All rights reserved.
      </p>
      <div class="flex items-center gap-3 -mt-2.5">
        <img
          src="/images/branding/upstart-avatar.svg"
          alt="UpStart Productions"
          class="w-[50px] h-[50px] rounded-full border-2 border-white object-cover flex-shrink-0"
        />
        <p class="text-gray-400 text-sm">
          Website by <a href="https://heyupstart.com" target="_blank" rel="noopener noreferrer" class="text-craft-red hover:opacity-80 transition-colors">UpStart Productions</a>
        </p>
      </div>
    </div>
  </div>
</footer>

