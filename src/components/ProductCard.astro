---
import { ExternalLink } from "lucide-astro";
import ProductImageCarousel from "./ProductImageCarousel.astro";

interface Props {
  name: string;
  price: string;
  image: string | string[]; // Can be single image or array of images
  category: string;
  link: string;
  featured?: boolean;
}

const { name, price, image, category, link, featured = false } = Astro.props;

// Check if link is external (starts with http) or internal
const isExternal = link.startsWith('http');
const linkTarget = isExternal ? '_blank' : undefined;
const linkRel = isExternal ? 'noopener noreferrer' : undefined;

// Convert single image to array for consistency
const images = Array.isArray(image) ? image : [image];
---

<article class="card overflow-hidden group">
  <a href={link} target={linkTarget} rel={linkRel} class="block">
    <!-- Product Image(s) -->
    <div class="relative">
      <ProductImageCarousel images={images} alt={name} />
      {featured && (
        <div class="absolute top-4 right-4 bg-craft-red text-craft-white px-3 py-1 text-sm font-medium rounded z-20">
          Featured
        </div>
      )}
    </div>

    <!-- Product Info -->
    <div class="p-6">
      <div class="flex items-start justify-between gap-4 mb-2">
        <h3 class="text-xl font-medium text-craft-black group-hover:text-craft-red transition-colors">
          {name}
        </h3>
        {isExternal && (
          <ExternalLink class="w-5 h-5 text-craft-charcoal flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity" />
        )}
      </div>
      
      <p class="text-sm text-craft-brown uppercase tracking-wide mb-3">
        {category}
      </p>
      
      <p class="text-2xl font-medium text-craft-black">
        {price}
      </p>
    </div>
  </a>
</article>

