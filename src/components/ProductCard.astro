---
import { ExternalLink } from "lucide-astro";

interface Props {
  name: string;
  price: string;
  image: string;
  category: string;
  link: string;
  featured?: boolean;
}

const { name, price, image, category, link, featured = false } = Astro.props;
---

<article class="card overflow-hidden group">
  <a href={link} target="_blank" rel="noopener noreferrer" class="block">
    <!-- Product Image -->
    <div class="relative aspect-square overflow-hidden bg-craft-tan">
      <img
        src={image}
        alt={name}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      />
      {featured && (
        <div class="absolute top-4 right-4 bg-craft-red text-craft-white px-3 py-1 text-sm font-medium rounded">
          Featured
        </div>
      )}
    </div>

    <!-- Product Info -->
    <div class="p-6">
      <div class="flex items-start justify-between gap-4 mb-2">
        <h3 class="text-xl font-medium text-craft-black group-hover:text-craft-red transition-colors">
          {name}
        </h3>
        <ExternalLink class="w-5 h-5 text-craft-charcoal flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity" />
      </div>
      
      <p class="text-sm text-craft-brown uppercase tracking-wide mb-3">
        {category}
      </p>
      
      <p class="text-2xl font-medium text-craft-black">
        {price}
      </p>
    </div>
  </a>
</article>

